extends ../layout
block content
  .container-fluid(ng-app='demos_cfg' ng-controller='main_control')
      .row
        .col-sm-3.col-md-2.sidebar
          ul.nav.nav-sidebar
            li.active
              a(href="/")
                span(class="glyphicon glyphicon-home" aria-hidden="true")  Inicio
            li
              a(href='/clientes')
               span(class="glyphicon glyphicon-list" aria-hidden="true")  Clientes
               span.sr-only (current)
            li
              a(href='/productos')
               span(class="glyphicon glyphicon-list" aria-hidden="true")  Productos
            
        .col-sm-9.col-sm-offset-3.col-md-10.col-md-offset-2.main
          h2= title
          form.form-horizontal(method="post" action="/facturas/add")
            fieldset
              table.table.table-hover
                tr
                  th Nombre
                  th Apellido
                  th Direccion
                  th Telefono
                tr
                  td #{factura[0].idfactura}
                  td #{factura[0].fecha}
                  td #{factura[0].Clientes_idClientes}
                  //-td #{factura[0].telefono}
            //- .form-group
            //-   label.col-sm-2.control-label Fecha
            //-   .col-sm-10
            //-     input(type="date" name="fecha" required value="fecha")
             .col-sm-offset-2.col-sm-10
                  button.btn.btn-primary(type="submit" name="submit" value="Siguiente") 
                   span(class="glyphicon glyphicon-gift" aria-hidden="true") Siguiente
            